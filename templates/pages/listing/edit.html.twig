                <h3>Informations générales</h3>
                <div class="field-inline">
                    <div class="field-group field-input">
                        <label for="name">Nom de l'annonce</label>
                        {% if (old is defined) and ('name' in old|keys) %}
                        <input type="text" id="name" placeholder="Le nom de votre annonce" name="name" value="{{ old.name }}">
                        {% else %}
                        <input type="text" id="name" placeholder="Le nom de votre annonce" name="name" value="{{ listing.getName }}">
                        {% endif %}
                        {% if (errors is defined) and ('name' in errors|keys) %}
                        <span style="color: red;">{{ errors.name }}</span>
                        {% endif %}
                    </div>
                    <div class="field-group field-select">
                        <label for="price_range">les prix</label>
                        <select name="price_range" id="price_range">
                            <option value="0">None</option>
                            <option value="1">$</option>
                            <option value="2">$$</option>
                            <option value="3">$$$</option>
                            <option value="4">$$$$</option>
                        </select>
                        <i class="la la-angle-down"></i>
                    </div>
                </div>
                <div class="field-group">
                    <h4 class="label">Description</h4>
                    {% if (old is defined) and ('description' in old|keys) %}
                    <textarea name="description" rows="6" style="width: 100%;">{{ old.description }}</textarea>
                    {% else %}
                    <textarea name="description" rows="6" style="width: 100%;">{{ listing.getDescription }}</textarea>
                    {% endif %}
                    {% if (errors is defined) and ('description' in errors|keys) %}
                    <span style="color: red;">{{ errors.description }}</span>
                    {% endif %}
                    <!-- <div id="editor"></div> -->
                </div>
