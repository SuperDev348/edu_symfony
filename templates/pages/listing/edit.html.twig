                    <label for="category">catégorie</label>
                    <select data-placeholder="Veuillez choisir une catégorie" name="category_id" id="category" value="{{ listing.getCategoryId }}">
                        {% for category in categories %}
                        <option value="{{ category.getId }}">{{ category.getName }}</option>
                        {% endfor %}
                    </select>
                    <i class="la la-angle-down"></i>
                </div>
                <div class="field-group field-select">
                    <label for="place_type">Type d'annonce</label>
                    <select data-placeholder="Veuillez choisir un type" name="place_type_id" id="place_type_id" value="{{ listing.getPlaceTypeId }}">
                        {% for placetype in placetypes %}
                        <option value="{{ placetype.getId }}">{{ placetype.getName }}</option>
                        {% endfor %}
                    </select>
                    <i class="la la-angle-down"></i>
                </div>
