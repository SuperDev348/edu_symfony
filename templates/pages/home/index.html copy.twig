{% extends 'layout/home.html.twig' %}

{% block title %}
<title>| A new point of view</title>
{% endblock %}

{% block body %}
<main id="main" class="site-main home-main business-main overflow">
    <div class="site-banner bg_hero_02">
        <video class="overlay-video" autoplay="" muted="" playsinline="" loop="" src="https://getgolo.com/images/video3.mp4"></video>
        <div class="container">
            <div class="site-banner__content">
                <h1 class="site-banner__title">Business Listing</h1>
                <p><i>20</i> cities, <i>10</i> categories, <i>5662</i> listings.</p>
                <form action="#" class="site-banner__search layout-02">
                    <div class="field-input">
                        <label for="s">Find</label>
                        <input class="site-banner__search__input open-suggestion" id="s" type="text" name="s" placeholder="Ex: fastfood, beer" autocomplete="off">
                        <div class="search-suggestions name-suggestions">
                            <ul>
                                {% for category in categories %}
                                <li><a href="#"><i class="{{category.getIcon}}"></i><span>{{category.getName}}</span></a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div><!-- .site-banner__search__input -->
                    <div class="field-input">
                        <label for="loca">Where</label>
                        <input class="site-banner__search__input open-suggestion" id="loca" type="text" name="where" placeholder="Your city" autocomplete="off">
                        <div class="search-suggestions location-suggestions">
                            <ul>
                                <li><a href="#"><i class="las la-location-arrow"></i><span>Current location</span></a></li>
                                {% for city in cities %}
                                <li><a href="#"><span>{{city.getName}}</span></a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div><!-- .site-banner__search__input -->
                    <div class="field-submit">
                        <button><i class="las la-search la-24-black"></i></button>
                    </div>
                </form><!-- .site-banner__search -->
            </div><!-- .site-banner__content -->
        </div>
    </div><!-- .site-banner -->
    <div class="business-category">
        <div class="container">
            <h2 class="title title-border-bottom align-center offset-item">Browse Businesses by Category</h2>
            <div class="slick-sliders offset-item">
                <div class="slick-slider business-cat-slider slider-pd30" data-item="6" data-arrows="true" data-itemScroll="6" data-dots="true" data-centerPadding="50" data-tabletitem="3" data-tabletscroll="3" data-smallpcitem="4" data-smallpcscroll="4" data-mobileitem="2" data-mobilescroll="2" data-mobilearrows="false">
                    {% for category in categories %}
                    <div class="{{ category.color }}">
                        <a href="">
                            <i class="{{category.getIcon}}"></i>
                            <span class="title">{{ category.getName }}</span>
                            <span class="place">{{ category.listing_count }} Places</span>
                        </a>
                    </div>
                    {% endfor %}
                </div>
                <div class="place-slider__nav slick-nav">
                    <div class="place-slider__prev slick-nav__prev">
                        <i class="las la-angle-left"></i>
                    </div><!-- .place-slider__prev -->
                    <div class="place-slider__next slick-nav__next">
                        <i class="las la-angle-right"></i>
                    </div><!-- .place-slider__next -->
                </div><!-- .place-slider__nav -->
            </div>
        </div>
    </div><!-- .business-category -->
    <div class="trending trending-business">
        <div class="container">
            <h2 class="title title-border-bottom align-center offset-item">Trending Business Places</h2>
            <div class="slick-sliders offset-item">
                <div class="slick-slider trending-slider slider-pd30" data-item="4" data-arrows="true" data-itemScroll="4" data-dots="true" data-centerPadding="30" data-tabletitem="2" data-tabletscroll="2" data-smallpcscroll="3" data-smallpcitem="3" data-mobileitem="1" data-mobilescroll="1" data-mobilearrows="false">
                    {% for listing in listings %}
                    <div class="place-item layout-02 place-hover">
                        <div class="place-inner">
                            <div class="place-thumb hover-img">
                                <a class="entry-thumb" href="{{ path('listing_detail', {'id': listing.getId}) }}"><img src="{{ asset(listing.getCoverImage) }}" alt=""></a>
                                <a href="#" class="golo-add-to-wishlist btn-add-to-wishlist " data-place-id="185">
                                    <span class="icon-heart">
                                        <i class="la la-bookmark large"></i>
                                    </span>                                    
                                </a>
                                <a class="entry-category rosy-pink" href="#">
                                    <i class="las la-utensils"></i><span>{{ listing.category.getName }}</span>
                                </a>
                                <a href="#" class="author" title="Author"><img src="{{ asset('assets/images/avatars/male-3.jpg') }}" alt="Author"></a>
                                {% if listing.getFeature %}
                                <div class="feature">Featured</div>
                                {% endif %}
                            </div>
                            <div class="entry-detail">
                                <div class="entry-head">
                                    <div class="place-type list-item">
                                        <span>{{ listing.category.getName }}</span>
                                    </div>
                                    <div class="place-city">
                                        <a href="#">{{ listing.city.getName }}</a>
                                    </div>
                                </div>
                                <h3 class="place-title"><a href="{{ path('listing_detail', {'id': listing.getId}) }}">{{ listing.getName }}</a></h3>
                                <div class="open-now"><i class="las la-door-open"></i>Open now</div>
                                <div class="entry-bottom">
                                    <div class="place-preview">
                                        <div class="place-rating">
                                            <span>5.0</span>
                                            <i class="la la-star"></i>
                                        </div>
                                        <span class="count-reviews">(2 Reviews)</span>
                                    </div>
                                    <div class="place-price">
                                        <span>{{ listing.getPriceRange }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="place-slider__nav slick-nav">
                    <div class="place-slider__prev slick-nav__prev">
                        <i class="las la-angle-left"></i>
                    </div><!-- .place-slider__prev -->
                    <div class="place-slider__next slick-nav__next">
                        <i class="las la-angle-right"></i>
                    </div><!-- .place-slider__next -->
                </div><!-- .place-slider__nav -->
            </div>
        </div>
    </div><!-- .trending -->
    <div class="featured-cities">
        <div class="container">
            <h2 class="title title-border-bottom align-center offset-item">Featured Cities<span>Choose the city youâ€™ll be living in next</span></h2>
            <div class="slick-sliders offset-item">
                <div class="slick-slider featured-slider slider-pd30" data-item="4" data-arrows="true" data-itemScroll="4" data-dots="true" data-centerPadding="30" data-tabletitem="2" data-tabletscroll="2" data-mobileitem="1" data-mobilescroll="1" data-mobilearrows="false">
                    {% for city in cities %}
                    <div class="slick-item">
                        <div class="cities__item hover__box">
                            <div class="cities__thumb hover__box__thumb">
                                <a title="London" href="">
                                    <img src="{{ asset(city.getImage) }}" alt="London">
                                </a>
                            </div>
                            <h4 class="cities__name">{{ city.getCountry }}</h4>
                            <div class="cities__info">
                                <h3 class="cities__capital">{{ city.getName }}</h3>
                                <p class="cities__number">{{ city.listing_count }} places</p>
                            </div>
                        </div><!-- .cities__item -->
                    </div>
                    {% endfor %}
                </div>
                <div class="place-slider__nav slick-nav">
                    <div class="place-slider__prev slick-nav__prev">
                        <i class="las la-angle-left"></i>
                    </div><!-- .place-slider__prev -->
                    <div class="place-slider__next slick-nav__next">
                        <i class="las la-angle-right"></i>
                    </div><!-- .place-slider__next -->
                </div><!-- .place-slider__nav -->
            </div>
        </div>
    </div><!-- .featured-cities -->
    <div class="business-about" style="background-image: url(images/img_about_1.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="business-about-info">
                        <h2 class="offset-item">Who we are</h2>
                        <p class="offset-item">Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident.</p>
                        <a href="#" class="btn offset-item">Read more</a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .business-about -->
    <div class="testimonial">
        <div class="container">
            <h2 class="title title-border-bottom align-center offset-item">People Talking About Us</h2>
            <div class="slick-sliders offset-item">
                <div class="slick-slider testimonial-slider slider-pd30" data-item="2" data-arrows="true" data-itemScroll="2" data-dots="true" data-centerPadding="30" data-tabletitem="1" data-tabletscroll="1" data-mobileitem="1" data-mobilescroll="1" data-mobilearrows="false">
                    {% if reviews|length > 0 %}
                        {% for review in reviews %}
                        <div class="testimonial-item layout-02">
                            <div class="avatar">
                                <img src="{{ asset(review.getUserAvatar) }}" alt="Avatar">
                                <img src="{{ asset('assets/images/assets/quote-active.png') }}" alt="Quote" class="quote">
                            </div>
                                <div class="testimonial-info">
                                    <p>{{ review.getDescription }}</p>
                                    <div class="testimonial-meta">
                                        <b>{{ review.getUserName }}</b>
                                        <span>CEO Alididi</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                                </div>
                                <div class="place-slider__nav slick-nav">
                                    <div class="place-slider__prev slick-nav__prev">
                                        <i class="las la-angle-left"></i>
                                    </div><!-- .place-slider__prev -->
                                    <div class="place-slider__next slick-nav__next">
                                        <i class="las la-angle-right"></i>
                                    </div><!-- .place-slider__next -->
                                </div><!-- .place-slider__nav -->
                        {% for i in 0..reviews|length-1 %}
                            </div>
                        {% endfor %}
                    {% endif %} 
                </div><!-- .testimonial -->
                <div class="blogs">
                    <div class="container">
                        <h2 class="title title-border-bottom align-center offset-item">From Our Blog</h2>
                        <div class="news__content offset-item">
                            <div class="row">
                                {% for blog in blogs %}
                                <div class="col-md-4">
                                    <article class="post hover__box">
                                        <div class="post__thumb hover__box__thumb">
                                            <a title="{{ blog.getTitle }}" href="{{ path('blog_detail', {'id': blog.getId}) }}"><img src="{{ asset(blog.getImage ) }}" alt="{{ blog.getTitle }}"></a>
                                        </div>
                                        <div class="post__info">
                                            <ul class="post__category">
                                                <li><a title="Food" href="{{ path('blog_detail', {'id': blog.getId}) }}">Food & Drink</a></li>
                                            </ul>
                                            <h3 class="post__title"><a title="{{ blog.getTitle }}" href="{{ path('blog_detail', {'id': blog.getId}) }}">{{ blog.getTitle }}</a></h3>
                                        </div>
                                    </article>
                                </div>
                                {% endfor %}
                            </div>
                            <div class="align-center button-wrap"><a href="{{ path('blog') }}" class="btn btn-border">View more</a></div>
                        </div>
                    </div>
                </div><!-- .blogs -->
</main><!-- .site-main -->
{% endblock %}