{% extends 'layout/admin/app.html.twig' %}

{% block title %}
<title>Admin Category Edit</title>
{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Category Edit</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item active">Category Edit</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>
  <div class="container-fluid">
    <div class="row" style="display: flex; justify-content: center; margin: 50px;">
      <!-- left column -->
      <div class="col-md-6 col-md-offset-3">
        <!-- general form elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Edit Category</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form action="{{ path('admin_category_update', {'id': category.getId}) }}" method="POST">
            <div class="card-body">
              <div class="form-group">
                <label>City</label>
                <select class="form-control select2" name="city_id" style="width: 100%;" value="{{ category.getCityId }}">
                  {% for city in cities %}
                    {% if city.getId == category.getCityId %}
                    <option value="{{ city.getId }}" selected>{{ city.getName }}</option>
                    {% else %}
                    <option value="{{ city.getId }}">{{ city.getName }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
              <div class="form-group">
                <label>Type</label>
                <select class="form-control select2" name="type_id" style="width: 100%;" value="{{ category.getTypeId }}">
                  {% for categorytype in categorytypes %}
                    {% if categorytype.getId == category.getTypeId %}
                    <option value="{{ categorytype.getId }}" selected>{{ categorytype.getName }}</option>
                    {% else %}
                    <option value="{{ categorytype.getId }}">{{ categorytype.getName }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
              <div class="form-group">
                <label>Active Type</label>
                <select class="form-control select2" name="active_type_id" style="width: 100%;" value="{{ category.getActiveTypeId }}">
                  {% for activetype in activetypes %}
                    {% if activetype.getId == category.getActiveTypeId %}
                    <option value="{{ activetype.getId }}" selected>{{ activetype.getName }}</option>
                    {% else %}
                    <option value="{{ activetype.getId }}">{{ activetype.getName }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Save</button>
              <a href="{{ path('admin_category') }}" class="btn btn-info">Cancel</a>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
  $(function () {
    bsCustomFileInput.init();
  });
</script>
{% endblock %}