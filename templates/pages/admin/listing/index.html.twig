{% extends 'layout/admin/app.html.twig' %}

{% block title %}
<title>Admin Listing</title>
{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Listings</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item active">Listing</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Listings</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>ID</th>
                  <th>Thumb</th>
                  <th>Name</th>
                  <th>City</th>
                  <th>Category</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for listing in listings %}
                <tr>
                  <td data-title="ID">{{ listing.getId }}</td>
                  <td data-title="Thumb"><img src="{{ asset(listing.getCoverImage) }}" alt="Place Thumb" style="width: 50px; height: 50px;"></td>
                  <td data-title="Place name"><b>{{ listing.getName }}</b></td>
                  <td data-title="City">{{ listing.city }}</td>
                  <td data-title="Category">{{ listing.getCategory }}</td>
                  <td data-title="Status" class="{{ listing.status }}">{{ listing.getStatus }}</td>
                  <td data-title="" class="place-action">
                      <a href="{{ path('listing_edit', {'id': listing.getId}) }}" class="edit mr-3" title="Edit"><i class="las la-edit"></i></a>
                      <a href="{{ path('admin_listing_edit', {'id': listing.getId}) }}" class="edit mr-3" title="Edit"><i class="las la-eye"></i></a>
                      <a href="{{ path('admin_listing_delete', {'id': listing.getId}) }}" class="" title=""><i class="la la-trash-alt" style="color: red;"></i></a>
                  </td>
                </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
{% endblock %}

{% block javascripts %}
<!-- Page specific script -->
<script>
  $(function () {
    // $("#example1").DataTable({
    //   "responsive": true, "lengthChange": false, "autoWidth": false,
    //   "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    // }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  });
</script>
{% endblock %}