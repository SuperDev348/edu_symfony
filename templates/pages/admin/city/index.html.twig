{% extends 'layout/admin/app.html.twig' %}

{% block title %}
<title>Admin Cities</title>
{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Cities</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item active">Cities</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Cities</h3>
              <a href="{{ path('admin_city_create') }}" class="btn btn-primary" style="float:right">New City</a>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Country</th>
                    <th>Image</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                {% for city in cities %}
                <tr>
                  <td data-title="ID">{{ city.getId }}</td>
                  <td data-title="Name">{{ city.getName }}</td>
                  <td data-title="Country">{{ city.getCountry }}</td>
                  <td data-title="Image"><img src="{{ asset(city.getImage) }}" alt="Image" style="height: 50px;"></td>
                  <td data-title="" class="place-action">
                    <a href="{{ path('admin_city_edit', {'id': city.getId}) }}" class="edit mr-3" title="Edit"><i class="las la-edit"></i></a>
                    <a href="{{ path('admin_city_delete', {'id': city.getId}) }}" class="" title=""><i class="la la-trash-alt" style="color: red;"></i></a>
                  </td>
                </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
{% endblock %}

{% block javascripts %}
<!-- Page specific script -->
<script>
